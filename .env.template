NEO4J_USERNAME='neo4j' # you can use this as the default
NEO4J_PASSWORD='...'

# OpenRouter environment variables
OPENROUTER_BASE_URL="https://openrouter.ai/api/v1" # OpenRouter API base URL
OPENROUTER_API_KEY="sk-or-..." # Get your API key from https://openrouter.ai/keys
OPENROUTER_MODEL="meta-llama/llama-3.1-8b-instruct" # Optional: specify model, see https://openrouter.ai/models

# OpenAI environment variables (for embeddings)
